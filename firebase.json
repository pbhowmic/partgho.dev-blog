{
    "hosting": {
        "public": "site",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "**/.venv/**",
            "**/.idea/**",
            "**/.github/**",
            "Pipfile",
            "Pipfile.lock"
        ],
        "emulators": {
            "hosting": {
                "port": 8000,
                "host": "0.0.0.0"
            }
        },
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}